let state=location.href;
let mov_url=document.querySelector("meta[property='og:url']").content;

let say=
    '<div class="say">'+
    '<div class="inner"></div>'+
    '<style>'+
    '.say { position: fixed; z-index: 2000; top: 4px; right : 0; padding: 15px 20px; background: #fff; }'+
    '</style></div>';

if(!document.querySelector('.say')){
    document.body.insertAdjacentHTML('beforeend', say); }

let inner=document.querySelector('.inner');
if(inner){
    inner.innerHTML=state + '<br>' +mov_url; }






